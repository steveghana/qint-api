{
  "name": "qint-microservices",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "generate-secret": "node -e \"console.log(require('crypto').randomBytes(64).toString('hex'))\"",
    "profiler": "ndb -- node dist/src/apps/api-gateway/main.js",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nodemon cross-env NODE_ENV=development ts-node ./src/apps/api-gateway/main.ts",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:db": "docker run --name postgres -p 5432:5432 -e POSTGRES_PASSWORD=password -e POSTGRES_DB=postgres  -e POSTGRES_USER=postgres -d postgres:latest",
    "start:prod": "node dist/src/apps/api-gateway/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "docker-build": "docker build -t stevegha/api-qint:1.4 .",
    "docker-push": "docker push stevegha/api-qint:1.4",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/apps/api-gateway/test/jest-e2e.json",
    "typeorm": "npm run build && ts-node ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./db/data-source.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./db/data-source.ts migration:generate ./migrations/QueueintDb",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./migrations/QueueintDb",
    "typeorm:revert-migration": "npm run typeorm -- -d ./db/data-source.ts migration:revert",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./ormconfig.ts",
    "db:drop": "npm run typeorm:cli schema:drop",
    "db:sync": "npm run typeorm:cli schema:sync",
    "cover": "npm run cover:unit && npm run cover:integration && npm run cover:report",
    "cover:unit": "nyc --silent npm run test:unit"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.3.10",
    "@nestjs/platform-socket.io": "^9.3.12",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^9.3.10",
    "axios": "^1.3.4",
    "cache-manager": "^5.1.7",
    "cache-manager-ioredis": "^2.1.0",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.23.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "nest-winston": "^1.9.1",
    "nestjs-i18n": "^10.2.6",
    "nestjs-redis": "^1.3.3",
    "nodemailer": "^6.6.3",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "sinon": "^15.0.2",
    "typeorm": "^0.3.12",
    "web-push": "^3.4.5",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "xml2js": "^0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cache-manager-ioredis": "^2.0.3",
    "@types/express": "^4.17.13",
    "@types/i18next-node-fs-backend": "^2.1.1",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.192",
    "@types/node": "18.11.18",
    "@types/nodemailer": "^6.4.7",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.11",
    "@types/web-push": "^3.3.2",
    "@types/ws": "^8.5.4",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
